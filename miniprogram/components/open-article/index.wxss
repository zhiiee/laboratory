.article {
  position: fixed;
  width: 150rpx;
  height: 150rpx;
  z-index: 7777777;
  border-radius: 30rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
  animation: shake 5s infinite ease both;
}

@keyframes shake {
  0% {
    transform: scale(1) rotate(0)
  }
  10%, 20% {
    transform: scale(.9) rotate(-3deg)
  }
  30%, 50%, 70%, 90% {
    transform: scale(1) rotate(3deg)
  }
  40%, 60%, 80% {
    transform: scale(1) rotate(-3deg)
  }
  100% {
    transform: scale(1) rotate(0)
  }
}
